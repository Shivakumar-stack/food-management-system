{
  "name": "foodbridge-frontend",
  "version": "1.0.0",
  "description": "FoodBridge - Food Donation Platform Frontend",
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/main.css -o ./css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./css/main.css -o ./css/styles.css --watch",
    "lint": "echo 'Frontend lint: HTML/CSS validation' && exit 0",
    "serve": "npx live-server --port=5500 --open=/index.html",
    "start": "npm run serve",
    "test:smoke": "playwright test --config=playwright.smoke.config.js",
    "test:smoke:headed": "playwright test --config=playwright.smoke.config.js --headed"
  },
  "keywords": [
    "food-donation",
    "ngo",
    "volunteer",
    "tailwind",
    "html"
  ],
  "author": "FoodBridge Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "live-server": "^1.2.0",
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
